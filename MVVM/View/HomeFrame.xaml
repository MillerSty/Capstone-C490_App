        xmlns:local="clr-namespace:C490_App" xmlns:viewmodel="clr-namespace:C490_App.MVVM.ViewModel"
        ResizeMode="CanResize"
        mc:Ignorable="d"
        Height="500" Width="900"
        WindowStyle="SingleBorderWindow" 
        Title="HomeFrame"><!--Remove WindowStyle and title For made menu-->

