        <CheckBox Grid.Column="6" Grid.Row="6" Background="White" BorderBrush="Gray" Height="20" Width="20"/>

        <CheckBox Grid.Column="7" Grid.Row="2" Background="White" BorderBrush="Gray" Height="20" Width="20"/>
        <CheckBox Grid.Column="7" Grid.Row="3" Background="White" BorderBrush="Gray" Height="20" Width="20"/>
        <CheckBox Grid.Column="7" Grid.Row="4" Background="White" BorderBrush="Gray" Height="20" Width="20"/>
        <CheckBox Grid.Column="7" Grid.Row="5" Background="White" BorderBrush="Gray" Height="20" Width="20"/>
        <CheckBox Grid.Column="7" Grid.Row="6" Background="White" BorderBrush="Gray" Height="20" Width="20"/>

        <CheckBox Grid.Column="8" Grid.Row="2" Background="White" BorderBrush="Gray" Height="20" Width="20"/>
        <CheckBox Grid.Column="8" Grid.Row="3" Background="White" BorderBrush="Gray" Height="20" Width="20"/>
        <CheckBox Grid.Column="8" Grid.Row="4" Background="White" BorderBrush="Gray" Height="20" Width="20"/>
        <CheckBox Grid.Column="8" Grid.Row="5" Background="White" BorderBrush="Gray" Height="20" Width="20"/>
        <CheckBox Grid.Column="8" Grid.Row="6" Background="White" BorderBrush="Gray" Height="20" Width="20"/>


        <CheckBox Grid.Column="9" Grid.Row="2" Background="White" BorderBrush="Gray" Height="20" Width="20"/>
        <CheckBox Grid.Column="9" Grid.Row="3" Background="White" BorderBrush="Gray" Height="20" Width="20"/>
